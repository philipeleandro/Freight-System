<%= form_with(model: @car) do |f| %>
  <div>
    <%= f.label :model %>
    <%= f.text_field :model %>
  </div>
  <div>
    <%= f.label :brand %>
    <%= f.text_field :brand %>
  </div>
  <div>
    <%= f.label :plate %>
    <%= f.text_field :plate %>
  </div>
  <div>
    <%= f.label :year %>
    <%= f.number_field :year %>
  </div>
  <div>
    <%= f.label :max_load %>
    <%= f.number_field :max_load %>
  </div>
   <% if Company.where(domain: current_user.email.split("@").last).empty? %>
    <div>
      <%= f.label :company_id %>
      <%= f.select :company_id, [["", ""]], selected: ""  %>
    </div>
  <% else %>
    <div>
      <%= f.label :company_id %>
      <%= f.select :company_id, [[Company.find_by(domain: current_user.email.split("@").last).brand_name, Company.find_by(domain: current_user.email.split("@").last).id]] %>
    </div>
  <% end %>
  <div>
    <%= f.submit 'Cadastrar' %>
  </div>
<% end %>